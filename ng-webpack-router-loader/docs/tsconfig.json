{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6"],
    "noImplicitAny": false,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "outDir": "dist",
    "noEmitOnError": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "../src/options.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "demo",
    "test",
    "__codegen__"
  ]
}
